@model KnowledgeBase.ViewModels.Public.SearchFormViewModel

@{ ViewBag.SearchTerm = Model.SearchKeyword;
    ViewBag.Title = String.Format("SearchResultTitle", Model.SearchKeyword); }

<h2>@ViewBag.Title</h2>
<div class="col-lg-12" id="SearchResultContainer">
    @foreach (var result in Model.Results)
    {
<div class="col-lg-12">
    @*<i class="fa fa-arrow-circle-o-right"></i>&nbsp;<a href="@Url.Action("Detail", "Home", new { id = @result.ArticleSefName })">@result.ArticleTitle</a>*@

    <a asp-controller="Home" asp-action="Details" asp-route-id="@result.ArticleSefName">@result.ArticleTitle</a>
</div>}
    @using (Html.BeginForm("Do", "Search", FormMethod.Post, new { id = "SearchForm" }))
    {
<input type="hidden" name="CurrentPage" id="CurrentPage" value="@Model.CurrentPage" />
                <input type="hidden" name="SearchKeyword" id="SearchKeyword" value="@Model.SearchKeyword" />}
</div>
<div class="col-lg-12">
    @*<a class="btn btn-default col-lg-12" data-href="@Url.Action("More","Search")" id="BtnLoadMore">SearchResultsPageLoadMore</a>*@
    <a asp-controller="Search" asp-action="More" id="BtnLoadMore">Load More</a>
</div>





