@model List<KnowledgeBase.ViewModels.Public.TagCloudItem>

@*<h4 class="section-title">@UIResources.LandingSidebarTagCloudListTitle</h4>*@
<h4 class="section-title">Sidebar TagCloud List</h4>

<div class="row">
    <div class="col-xs-12">
        @foreach (var tag in Model)
        {
            <a class="btn-xs btn btn-default btn-tag" href='@Url.Action("Tags", "Home", new { id = tag.Name })'>
                @tag.Name
            </a>        
        }
    </div>
</div>